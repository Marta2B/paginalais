        <script>
             function logar(){

var login = document.getElementById('login').value;
var senha = document.getElementById('senha').value;

if(login == "lais" && senha == "admin"){
   
    location.href = "Login Lais.html";
}else{
    alert('Usuario ou senha incorretos');
}


}


function logar(){

var login = document.getElementById('login').value;
var senha = document.getElementById('senha').value;

if(login == "raul" && senha == "admin"){
   
    location.href = "Raul Login.html";
}else{
    alert('Usuario ou senha incorretos');
}


}

